@model FitSalon.WebUI.CQRS.Results.ServiceResults.GetServiceByIDQueryResult
@{
    ViewData["Title"] = "GetService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS Firma Düzenleme</h1>

<form method="post">
    <input type="hidden" asp-for="ServiceID" />
    <label>Şehir: </label>
    <input type="text" asp-for="City" class="form-control"/>
    <br />
    <label>Gün/Gece: </label>
    <input type="text" asp-for="DayNight" class="form-control" />
    <br />
    <label>Kapasite: </label>
    <input type="text" asp-for="Capacity" class="form-control" />
    <br />
    <label>Fiyat: </label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">CQRS ile Firma Kaydet</button>
</form>

